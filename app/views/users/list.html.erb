<h1>User List</h1>
<table>
  <tr>
    <th>Name</th>
    <th>E-mail</th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td style="width:200px;">
        <div style="width:200px; overflow-x:scroll;">
          <%= user.user_name %>
        </div>
      </td>
      <td style="width:400px;">
        <div style="width:400px; overflow-x:scroll;">
          <%= user.email %>
        </div>
      </td>
      <td><%= link_to 'update', { :controller => :users, :action => :update, :id => user.id } %></td>
      <td><%= link_to 'delete', { :controller => :users, :action => :delete, :id => user.id } %></td>
    </tr>
  <% end %>
</table>

<h1>Item List</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th></th>
    <th></th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td style="width:200px;">
        <div style="width:200px; overflow-x:scroll;">
          <%= item.name %>
        </div>
      </td>
      <td style="width:200px;">
        <div style="width:200px; overflow-x:scroll;">
          <%= item.value %>
        </div>
      </td>
      <td><%= link_to 'update', { :controller => :items, :action => :update, :id => item.id } %></td>
      <td><%= link_to 'delete', { :controller => :items, :action => :delete, :id => item.id } %></td>
    </tr>
  <% end %>
</table>
